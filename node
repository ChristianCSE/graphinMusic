
import { available_env } from 'constants';
console.log(available_env);
//could do switch/case statement (it's more verbose)
module.exports = env => {

  // const available_env = [
  //   "production", 
  //   "development", 
  //   "testing", 
  //   "staging"
  // ];

  console.log(available_env);
  if (typeof env !== "string" || available_env[env] === undefined) {
    console.error('ERROR in config/index.js invalid env:', env);
    process.exit(1);
  }

  const config = `../env/${ env }`;

  return config;
};

